#include <iostream>
using namespace std;

struct TRAIN{
    char *NAZN = " ";
    int NUMR = 0;
    char *TIME = " ";
    TRAIN()
    {
        char *_NAZN = new char[128];
        int _NUMR = 0;
        char *_TIME = new char[4];
        cout << "Введите номер поезда" << endl;
        cin >> _NUMR;
        cout << "Введите пункт назначения" << endl;
        cin >> _NAZN;
        cout << "Введите время отправления (одим числом, без разделительных знаков, например 19:45 -> 1945)" << endl;
        cin >> _TIME;
        TIME = _TIME;
        NAZN = _NAZN;
        NUMR = _NUMR;
    }
    void printTrain();
};

void TRAIN::printTrain()
{
    cout << "Номер поезда: " << NUMR << endl;
    cout << "Пункт назначения: " << NAZN << endl;
    cout << "Время отправления: " << TIME[0] << TIME[1]<< ":" << TIME[2] << TIME[3] << endl;
    cout << "________________________________" << endl;
}

int main() {
    setlocale(LC_ALL, "Russian");
    int const n = 8;
    int timeNow = 0;
    TRAIN* rasp[n];
    bool isFound = false;
    for (int i = 0; i < n; i++)
    {
       rasp[i] = new TRAIN();
        break;
    }
    cout << "Введите время (одим числом, без разделительных знаков, например 19:45 -> 1945)" << endl;
    cin >> timeNow;
    for (int i = 0; i < n; i++)
    {
        int buf = atoi(rasp[i]->TIME);
        if (buf > timeNow)
        {
            rasp[i]->printTrain();
            isFound = true;
        }
    }
    if (!isFound)
        cout << "Таких поездов не найдено" << endl;
    system("pause");
    return 0;
}
